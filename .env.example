# Environment
NODE_ENV=development

# Server
PORT=4000
HOST=0.0.0.0

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/twello?sslmode=require
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -hex 64
JWT_ACCESS_TOKEN_PRIVATE_KEY=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_TOKEN_PRIVATE_KEY=your-super-secret-refresh-token-key-change-in-production

# Token TTL
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=strict

# Logging
LOG_FILE_PATH=./logs/audit.log
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# CORS
CORS_ORIGIN=http://localhost:3000

# Password Reset
PASSWORD_RESET_TOKEN_TTL=3600000
