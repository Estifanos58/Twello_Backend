# Environment
NODE_ENV=development

# Server
PORT=4000
HOST=0.0.0.0

# Database
DATABASE_URL=postgres://postgres:postgres@db:5432/pmdb
DB_POOL_MIN=2
DB_POOL_MAX=10

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -hex 64
JWT_ACCESS_TOKEN_PRIVATE_KEY=your-super-secret-access-token-key-change-in-production
JWT_REFRESH_TOKEN_PRIVATE_KEY=your-super-secret-refresh-token-key-change-in-production

# Token TTL
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d

# Cookie Settings
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAMESITE=strict

# Logging
LOG_FILE_PATH=./logs/audit.log
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# CORS
CORS_ORIGIN=http://localhost:3000

# Password Reset
PASSWORD_RESET_TOKEN_TTL=3600000

# AI Integration (Optional - Gemini)
GEMINI_API_KEY=
GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent
